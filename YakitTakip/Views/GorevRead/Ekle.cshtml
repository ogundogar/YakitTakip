@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IQueryable<YakitTakip.Models.TbGorev>
<main>
    <h3>Görev Ekle</h3>
    <div class="container">
        <div class="row">
            <div class="bg-danger col-md-3 col-sm-12">
                @Html.Partial("../Shared/PartialViews/aside")
            </div>
            <section class="col-md-9 col-sm-12">
                <article>
                    <form action="/GorevWrite/Ekle" method="post">
                        <label for="personel">Personel:</label><br>
                        @await Component.InvokeAsync("Personel")<br />
                        <label for="arac">Araç:</label><br>
                        @await Component.InvokeAsync("Arac")<br />


                        <input type="hidden" id="id" name="id">

                        <label for="acıklama">Açıklama:</label><br>
                        <input type="text" id="acıklama" name="acıklama"><br><br>

                        <label for="baslangicTarihi">Görev Başlangıç Tarihi:</label><br>
                        <input type="datetime" id="baslangicTarihi" name="baslangicTarihi"><br><br>

                        <label for="sonuTarihi">Görev Sonu Tarihi:</label><br>
                        <input type="datetime" id="sonuTarihi" name="sonuTarihi"><br><br>

                        <label for="baslangicKm">Görev Başlangıç KM:</label><br>
                        <input type="datetime" id="baslangicKm" name="baslangicKm"><br><br>

                        <label for="bitisKm">Görev Sonu KM:</label><br>
                        <input type="datetime" id="bitisKm" name="bitisKm"><br><br>

                        <button type="submit" class="btn btn-warning"> Güncelle </button>

                    </form>
                </article>
            </section>
        </div>
    </div>
</main>